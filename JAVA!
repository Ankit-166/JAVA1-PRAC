import java.util.Iterator;
import java.util.LinkedList;

class Address {
    private String name;
    private String city;
    private String state;

    // Constructor
    public Address(String name, String city, String state) {
        this.name = name;
        this.city = city;
        this.state = state;
    }

    // Getters (optional, useful if you want to access fields individually)
    public String getName() { return name; }
    public String getCity() { return city; }
    public String getState() { return state; }

    // toString() so printing Address is easy and readable
    @Override
    public String toString() {
        return "Name: " + name + ", City: " + city + ", State: " + state;
    }
}

public class Maillist {
    public static void main(String[] args) {
        // Create a LinkedList of Address objects
        LinkedList<Address> mailList = new LinkedList<>();

        // Add elements to the linked list
        mailList.add(new Address("Ankit Sahu", "Vadodara", "Gujarat"));
        mailList.add(new Address("Priyasa Patel", "Ahmedabad", "Gujarat"));
        mailList.add(new Address("Jayashree Rao", "Mumbai", "Maharashtra"));
        mailList.add(new Address("Ashutosh Kumar", "Bengaluru", "Karnataka"));

        // Display the contents using Iterator
        System.out.println("Mailing List Contents:");
        Iterator<Address> it = mailList.iterator();
        while (it.hasNext()) {
            Address addr = it.next();
            System.out.println(addr); // uses Address.toString()
        }
    }
}
